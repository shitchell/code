#!/usr/bin/env bash

UNAME=$(uname -a)

case "${UNAME}" in
    *Microsoft*)  OS="WSL";; # WSL must be first since it includes Linux, too
    *microsoft*)  OS="WSL2";; 
    Linux*)       OS="Linux";;
    Darwin*)      OS="Mac";;
    CYGWIN*)      OS="Cygwin";;
    MINGW*)       OS="Windows";; 
    *Msys)        OS="Windows";;
    *)            OS="UNKNOWN:${UNAME}"
esac

if [[ "${OS}" == "Mac" ]] && sysctl -n machdep.cpu.brand_string | grep -q 'Apple M1'; then
    OS="MacM1"
fi

echo "${OS}"
