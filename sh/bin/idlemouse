#!/usr/bin/env bash

# Make sure IdleMouse.class exists
IDLE_DIR="${IDLE_PATH:-${HOME}/code/java/robot}"
IDLE_PATH="${IDLE_DIR}/IdleMouse.class"

# Determine which version of java to use
java="java"
case "$(environment)" in
    WSL*)  java="java-win";;
esac

if [[ -r "${IDLE_PATH}" ]]; then
    cd "${IDLE_DIR}"
    "${java}" IdleMouse "${@}"
fi
