#!/bin/bash

pid=$$
pname=$(basename $0)
socket="/tmp/mpv.socket"

create_socket()
{
	rm $socket 2&>/dev/null
	mkfifo $socket
	cat > $socket &
	catpid=$!
}

if [[ "$(pidof -x $pname)" == "$pid" ]]; then
	echo "Slaving away"
	create_socket

	while true
	do
		if read line
		then
			echo received: $file
			cat $socket | mpv $file
		fi
	done < $socket
else
	echo "$@ => $socket"
	echo "$@" > $socket
fi