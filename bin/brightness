#!/bin/bash
directory="/sys/class/backlight/intel_backlight/"
file=$directory"brightness"
level=$(cat $file)
inc=100

if [ -z "$1" ]; then
	cat $file
	exit 0
fi

if [ $level -lt "600" ]; then
	inc=50
fi

function up(){
	newlevel=$(($level+$inc))
	echo $newlevel
}

function down(){
	newlevel=$(($level-$inc))

	if [ $newlevel -lt "10" ]; then
		newlevel=1
	elif [ $newlevel -lt "100" ]; then
		newlevel=10
	fi
	echo $newlevel
}


if [[ $1 = "up" ]]; then
	 newlevel=$(up)
elif [[ $1 = "down" ]]; then
	newlevel=$(down)
fi

echo $newlevel
# echo $level

echo $newlevel > $file